{
  "$id": "installAction",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "description": "Install Action",
  "type": "object",
  "properties": {
    "appName": {
      "type": "string",
      "minLength": 2,
      "maxLength": 50
    },
    "appURL": {
      "type": "string",
      "minLength": 2,
      "maxLength": 50
    },
    "appEmail": {
      "type": "string",
      "minLength": 2,
      "maxLength": 50,
      "format": "email"
    },
    "adminEmail": {
      "type": "string",
      "minLength": 2,
      "maxLength": 50,
      "format": "email"
    },
    "adminPassword": {
      "type": "string",
      "minLength": 8,
      "maxLength": 50
    }
  },
  "required": [
    "appName",
    "appURL",
    "appEmail",
    "adminEmail",
    "adminPassword"
  ]
}
