{% extends 'layout/guest.html.twig' %}

{% block title %}{{ title }}{% endblock %}

{% block content %}
    <div class="page page-center">
      <div class="container container-tight py-4">
        <div class="text-center mb-4">
          <a href="{{ path('app_home_web') }}" class="navbar-brand navbar-brand-autodark">
          	<img src="{{ absolute_url(asset('static/logo.png')) }}" height="150" alt="">
          </a>
        </div>
        <form class="card card-md" action="{{ path('app_endpoint_v1_forgot_password') }}" method="post">
          <div class="card-body">
            <h2 class="card-title text-center mb-4">Forgot Password</h2>
            <p class="text-muted mb-4">Enter your email address and the reset steps will be emails to you.</p>
            <div class="mb-3">
              <label class="form-label">Email Address</label>
              <input type="email" class="form-control" name="email" placeholder="Enter email" required>
            </div>
            <div class="form-footer">
              <button type="submit" class="btn btn-primary w-100">Submit</button>
            </div>
          </div>
        </form>
      </div>
    </div>
{% endblock %}