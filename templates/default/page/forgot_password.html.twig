{% extends 'layout/guest.html.twig' %}

{% block title %}{{ title }}{% endblock %}

{% block content %}
    <div class="page page-center">
      <div class="container container-tight py-4" id="app_forgot_password">
        <div class="text-center mb-4">
          <a href="{{ path('app_home_web') }}" class="navbar-brand navbar-brand-autodark">
          	<img src="{{ absolute_url(asset('static/logo.png')) }}" height="150" alt="">
          </a>
        </div>
        <form v-on:submit.prevent="forgotPasswordAction" class="card card-md" action="{{ path('app_endpoint_v1_forgot_password') }}" data-redirect-url="{{ path('app_ui_login') }}" method="post">
          <input type="hidden" name="csrf_token" value="{{ csrf_token('forgot-password-action') }}"/>
          <div class="card-body">
            <h2 class="card-title text-center mb-4">{% trans %}Forgot Password{% endtrans %}</h2>
            <p class="text-muted mb-4">{% trans %}Enter your email address and the reset steps will be emails to you.{% endtrans %}</p>
            <div class="mb-3">
              <label class="form-label">{% trans %}Email Address{% endtrans %}</label>
              <input type="email" class="form-control" name="email" placeholder="{% trans %}Enter email{% endtrans %}" required>
            </div>
            <div class="form-footer">
              <button type="submit" class="btn btn-primary w-100">{% trans %}Submit{% endtrans %}</button>
            </div>
          </div>
        </form>
      </div>
    </div>
{% endblock %}